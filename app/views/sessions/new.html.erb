<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
</head>
<body>
	<div class="row justify-content-center">
    	<dir>
	    <%= form_tag sessions_path(action: 'create'), method: "post" do %>
	      <%= label_tag 'Email' %>
	      <br />
	      <%= text_field_tag 'email', params[:email]%>
	      <br /> <br />

	      <%= label_tag 'Password' %>
	      <br />
	      <%= text_field_tag 'password',params[:password]%>

	      <br /> <br />

	     <%= submit_tag "Se connecter" %>

	    	<% end %>
    	</dir>

    </div>

</body>
</html>